<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="User Name"
            android:textSize="20sp"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Phone Number"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cart_product_quantity"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Total Price"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_address_atreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address, Street Name"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/order_total_price"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date Time"
            android:textColor="@color/cardview_light_background"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/order_address_atreet"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/show_all_product_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_date_time"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="#F2F3F0F0"
            android:gravity="center"
            android:text="Show User Order"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>

