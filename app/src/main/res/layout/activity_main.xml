<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/coverFruits"
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/coverfruits"/>

        <TextView
            android:id="@+id/app_slogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="An Apple A Day Keeps the Doctor Away thats why Online Fruit Vendor is a BUTTON away to deliver your order faster!"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_below="@+id/coverFruits"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/main_login_btn"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/login1"
            android:gravity="fill|end"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColor="#08FC13"
            android:textSize="14sp"
            android:layout_below="@id/app_slogan"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Login"
            android:layout_below="@id/main_login_btn"
            android:layout_marginLeft="20dp"/>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="97dp"
            android:layout_height="50dp"
            android:background="@drawable/signup1"
            android:textSize="20sp"
            android:gravity="fill|end"
            android:layout_marginEnd="40dp"
            android:layout_below="@id/app_slogan"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Sign Up"
            android:layout_below="@id/sign_up_btn"
            android:layout_marginEnd="40dp"
            android:layout_alignParentEnd="true"/>






    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>